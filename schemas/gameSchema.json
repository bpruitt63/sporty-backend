{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://example.com/gameSchema.json",
    "type": "array",
    "minItems": 1,
    "maxItems": 1500,
    "items": {
        "type": "object",
        "properties": {
            "team1Id" : {
                "type": "integer"
            },
            "team2Id" : {
                "type": "integer"
            },
            "gameDate" : {
                "type": "string",
                "oneOf": [
                    { "minLength": 8,
                        "maxLength": 8 },
                    { "minLength": 0,
                        "maxLength": 0 }
                ]
            },
            "gameTime" : {
                "type": "string",
                "oneOf": [
                    { "minLength": 8,
                        "maxLength": 8 },
                    { "minLength": 0,
                        "maxLength": 0 }
                ]
            },
            "gameLocation" : {
                "type": "string",
                "minLength": 0,
                "maxLength": 50
            },
            "team1Score" : {
                "oneOf": [
                    { "type": "integer",
                        "minimum": 0 },
                    { "type": "null" }
                ]           
            },
            "team2Score" : {
                "oneOf": [
                    { "type": "integer",
                        "minimum": 0 },
                    { "type": "null" }
                ]  
            },
            "notes": {
                "type": "string",
                "maxLength": 1000
            }
        },
        "additionalProperties": false,
        "required": [
            "team1Id",
            "team2Id"
        ]
    }
}