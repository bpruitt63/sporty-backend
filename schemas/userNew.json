{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://example.com/userNew.json",
    "type": "object",
    "properties": {
        "email": {
            "type": "string",
            "minLength": 6,
            "maxLength": 60,
            "format": "email"
          },
        "pwd": {
            "type": "string",
            "minLength": 6,
            "maxLength": 20
        },
        "firstName": {
            "type": "string",
            "minLength": 1,
            "maxLength": 30
        },
        "lastName": {
            "type": "string",
            "minLength": 1,
            "maxLength": 30
        },
        "superAdmin": {
            "type": "boolean"
        }
    },
    "additionalProperties": false,
    "required": [
        "email",
        "pwd",
        "firstName",
        "lastName"
    ]
}