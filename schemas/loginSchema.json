{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://example.com/loginSchema.json",
    "type": "object",
    "properties": {
        "email": {
            "type": "string",
            "minLength": 6,
            "maxLength": 60,
            "format": "email"
        },
        "pwd": {
            "type": "string",
            "minLength": 6,
            "maxLength": 20
        }
    },
    "additionalProperties": false,
    "required": [
      "email",
      "pwd"
    ]
}